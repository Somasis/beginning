#!/bin/bash

opensshd_exists() {
    type -fPp sshd
}

opensshd_start() {
    opensshd_status || rm -f /run/sshd.pid
    [[ -x $(type -fPp sshd-keygen.sh) ]] && $(type -fPp sshd-keygen.sh)
    setsid -w $(type -fPp sshd) ${OPENSSHD_ARGS} >/dev/null 2>&1
}

opensshd_reload() {
    kill -HUP $(</run/sshd.pid)
}

opensshd_stop() {
    setsid -w kill $(</run/sshd.pid)
    opensshd_status || rm -f /run/sshd.pid
}

opensshd_status() {
    pidfileexists /run/sshd.pid
}

#!/bin/bash

opensshd_start() {
    opensshd_status || rm -f /run/sshd.pid
    [[ -x $(type -fPp sshd-keygen.sh) ]] && $(type -fPp sshd-keygen.sh)
    $(type -fPp sshd)
}

opensshd_reload() {
    kill -HUP $(</run/sshd.pid)
}

opensshd_stop() {
    kill $(</run/sshd.pid)
    opensshd_status || rm -f /run/sshd.pid
}

opensshd_status() {
    pidexists /run/sshd.pid
}

#!/bin/bash

rsyslog_exists() {
    type -fPp rsyslogd
}

rsyslog_start() {
    rsyslog_status || rm -f /run/rsyslogd.pid
    rsyslogd -n -i "/run/rsyslogd.pid" >/dev/null 2>&1 &
}

rsyslog_stop() {
    kill $(</run/rsyslogd.pid)
    rsyslog_status || rm -f /run/rsyslogd.pid
}

rsyslog_status() {
    pidexists /run/rsyslogd.pid
}

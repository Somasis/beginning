#!/bin/bash

connman_depends() {
    echo dbus
}

connman_start() {
    connmand -n >/dev/null 2>&1 &
    echo $! > /run/connman.pid
    pidexists /run/connman.pid || rm -f /run/connmand.pid && return 1
}

connman_stop() {
    kill $(</run/connman.pid)
    connman_status || rm -f /run/connman.pid
}

connman_status() {
    pidexists /run/connman.pid
}

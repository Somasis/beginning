BEGINNING_LIB="${LIBDIR:-/lib}"/beginning

if [[ -r "${BEGINNING_LIB}"/rc.functions ]];then
    . "${BEGINNING_LIB}"/rc.functions
else
    printf 'Could not find %s/rc.functions...\n' "${BEGINNING_LIB}"
    exit 2
fi

case "$1" in
    restart)
        shift
        rc stop "$@"
        rc start "$@"
    ;;
    start|stop|reload)
        act="$1"
        if [[ $UID -ne 0 ]];then
            printf '%s: Must be root to %s daemons.\n' "${0##*/}" "${act}" >&2
            exit 2
        fi
        shift
        for dae in ${@};do
            daemon_file=$(beginning_daemon_file "${dae}")
            . "${daemon_file}" || printf "\t%s's rc.d script is invalid. Skipping.\n" "${daemon}" >&2
            if func_exists beginning_daemon_${act};then
                beginning_daemon_${act} "${dae}"
            else
                printf "%s: %s does not have a %s action.\n" "${0##*/}" "${dae}" "${act}" >&2
                exit 4
            fi
        done
    ;;
    -h|--help|help)
        man rc
    ;;
    ''|list|status)
        [[ -n "$2" ]] || shift
        for dae in $(beginning_daemon_list started "${@}" && beginning_daemon_list stopped "${@}");do
            status=
            daemon_file=$(beginning_daemon_file "${dae}")
            if [[ -z "${status}" ]];then
                . "${daemon_file}" || printf "%s's rc.d script is invalid. Skipping.\n" "${daemon}" >&2
                if func_exists ${dae##*/}_exists && ${dae##*/}_exists >/dev/null 2>&1;then
                    true
                else
                    continue
                fi
                if func_exists ${dae##*/}_status;then
                    if ${dae##*/}_status >/dev/null 2>&1;then
                        status STARTED ${dae}
                    else
                        status STOPPED ${dae}
                    fi
                else
                    status UNKNOWN ${dae}
                fi
            fi
        done
    ;;
esac


BEGINNING_LIB="${LIBDIR:-/lib}"/beginning

if [[ -r "${BEGINNING_LIB}"/rc.functions ]];then
    . "${BEGINNING_LIB}"/rc.functions
else
    printf 'Could not find %s/rc.functions...\n' "${BEGINNING_LIB}"
    exit 2
fi

case "$1" in
    restart|start|stop|reload)
        if [[ "$UID" -eq 0 ]];then
            printf '%s: must be root to %s daemons.\n' "${0##*/}" "${1}" >&2
            exit 5
        fi
    ;;
esac

case "$1" in
    restart)
        shift
        "$0" stop "$@"
        "$0" start "$@"
    ;;
    -h|--help|help)
        help
    ;;
    ''|list|status)
        [[ -n "$2" ]] || shift
        for dae in $(beginning_daemon_list started "${@}");do
            status STARTED "${dae}"
        done
        for dae in $(beginning_daemon_list stopped "${@}");do
            status STOPPED "${dae}"
        done
    ;;
    *)
        [[ $# -le 1 ]] && help && exit 2
        [[ $# -gt 1 ]] && act="$1"; shift
        for dae in ${@};do
            err=
            beginning_daemon_load "${dae}" >/dev/null 2>&1
            if func_exists beginning_daemon_${act};then
                beginning_daemon_${act} "${dae}"
            elif func_exists ${dae}_${act};then
                ${dae}_${act}
            else
                err=1
            fi
            err=${err:-$?}
        done
        [[ "$err" -eq 4 ]] && printf "%s: %s does not have a %s action.\n" "${0##*/}" "${dae}" "${act}" >&2
        [[ "$err" -eq 3 ]] && printf "%s: %s: script not found.\n" "${0##*/}" "${dae}" >&2
        exit $err
    ;;
esac

